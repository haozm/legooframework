<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
                           http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">
    <bean id="dictBundle" class="com.legooframework.model.osgi.LegooBundleFactoryBean">
        <property name="resource" value="classpath:META-INF/dict/legoo-model-cfg.xml"/>
    </bean>
    <bean id="dictStatementFactory" class="com.legooframework.model.jdbc.sqlengine.SQLStatementFactoryBean">
        <property name="patterns">
            <util:list value-type="java.lang.String">
                <value>.*[\\,/]dict[\\,/]entity-sql-cfg.xml$</value>
                <value>.*[\\,/]base[\\,/]macro-sql-cfg.xml$</value>
            </util:list>
        </property>
    </bean>
    <bean id="kvDictEntityAction" class="com.legooframework.model.dict.entity.KvDictEntityAction"
          parent="baseEntityAction">
        <property name="statementFactory" ref="dictStatementFactory"/>
    </bean>
    <bean id="lunarIndexAction" class="com.legooframework.model.dict.entity.LunarIndexAction"
          parent="baseEntityAction" init-method="init">
        <property name="monitorFileSystem" ref="monitorFileSystem"/>
        <property name="pattern" value=".*[\\,/]dict[\\,/]lunarIndex.csv$"/>
    </bean>

    <bean id="dictEventListenerService" class="com.legooframework.model.dict.service.EventListenerService"/>

    <int:chain id="dict-chain" input-channel="syncEventBus" output-channel="nullChannel">
        <int:filter ref="dictBundle"/>
        <int:service-activator ref="dictEventListenerService" method="handleMessage"/>
    </int:chain>

    <int:publish-subscribe-channel id="dict-command-channel"/>
    <int:service-activator ref="dictEventListenerService" method="handleMessage"
                           input-channel="dict-command-channel"/>
</beans>
