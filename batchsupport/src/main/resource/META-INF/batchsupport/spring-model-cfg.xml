<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="batchsupport" class="com.legooframework.model.osgi.LegooBundleFactoryBean">
        <property name="resource" value="classpath:META-INF/batchsupport/legoo-model-cfg.xml"/>
    </bean>
    <bean class="org.springframework.batch.core.scope.StepScope"/>
    <bean class="org.springframework.batch.core.scope.JobScope"/>
    <bean id="jobRepository" class="org.springframework.batch.core.repository.support.JobRepositoryFactoryBean"
          p:dataSource-ref="dataSource"
          p:transactionManager-ref="transactionManager"
          p:table-prefix="BATCH_"
          p:databaseType="MYSQL"/>
    <bean id="legooJobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
        <property name="jobRepository" ref="jobRepository"/>
    </bean>
    <bean id="legooJobExplorer" class="org.springframework.batch.core.explore.support.JobExplorerFactoryBean">
        <property name="dataSource" ref="dataSource"/>
    </bean>
</beans>
