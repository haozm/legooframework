<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">
    <bean id="crmAdapterBundle" class="com.legooframework.model.core.osgi.LegooBundleFactoryBean">
        <property name="resource" value="classpath:META-INF/crmadapter/legoo-model-cfg.xml"/>
    </bean>
    <bean id="crmAdapterStatementFactory" class="com.legooframework.model.core.jdbc.sqlengine.SQLStatementFactoryBean">
        <property name="patterns">
            <util:list value-type="java.lang.String">
                <value>.*[\\,/]crmadapter[\\,/]entity-sql-cfg.xml$</value>
                <value>.*[\\,/]base[\\,/]macro-sql-cfg.xml$</value>
            </util:list>
        </property>
    </bean>
    <bean id="crmCacheManager" class="com.legooframework.model.core.cache.CaffeineCacheManager">
        <property name="caffeineSpecs">
            <util:map key-type="java.lang.String" value-type="java.lang.String">
                <entry key="CrmAdapterCache" value="initialCapacity=64,maximumSize=1024,expireAfterAccess=5m"/>
            </util:map>
        </property>
    </bean>
    <bean id="crmOrganizationEntityAction"
          class="com.legooframework.model.crmadapter.entity.CrmOrganizationEntityAction"
          parent="baseEntityAction">
        <property name="statementFactory" ref="crmAdapterStatementFactory"/>
        <property name="cacheManager" ref="crmCacheManager"/>
        <property name="dataSource" ref="crmDataSource"/>
    </bean>
    <bean id="crmStoreEntityAction"
          class="com.legooframework.model.crmadapter.entity.CrmStoreEntityAction"
          parent="baseEntityAction">
        <property name="statementFactory" ref="crmAdapterStatementFactory"/>
        <property name="cacheManager" ref="crmCacheManager"/>
        <property name="dataSource" ref="crmDataSource"/>
    </bean>
    <bean id="crmEmployeeEntityAction"
          class="com.legooframework.model.crmadapter.entity.CrmEmployeeEntityAction"
          parent="baseEntityAction">
        <property name="statementFactory" ref="crmAdapterStatementFactory"/>
        <property name="cacheManager" ref="crmCacheManager"/>
        <property name="dataSource" ref="crmDataSource"/>
    </bean>
    <bean id="crmMemberEntityAction"
          class="com.legooframework.model.crmadapter.entity.CrmMemberEntityAction"
          parent="baseEntityAction">
        <property name="statementFactory" ref="crmAdapterStatementFactory"/>
        <property name="cacheManager" ref="crmCacheManager"/>
        <property name="dataSource" ref="crmDataSource"/>
    </bean>
</beans>
