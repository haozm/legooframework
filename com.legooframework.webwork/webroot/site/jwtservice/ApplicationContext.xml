<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">
    <context:property-placeholder location="classpath:jdbc.properties"/>
    <!-- db for batch job -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="crmDataSource"/>
    </bean>
    <alias name="crmDataSource" alias="tokenDataSource"/>
    <alias name="transactionManager" alias="tokenTransactionManager"/>
    <import resource="classpath*:META-INF/core/spring-model-cfg.xml"/>
    <import resource="classpath*:META-INF/jwtservice/spring-model-cfg.xml"/>
    <beans profile="test">
        <jee:jndi-lookup id="crmDataSource" jndi-name="java:comp/env/jdbc/csosmcrm"/>
    </beans>
</beans>
